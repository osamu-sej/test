{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "FastAPI: Run Dev Server",
      "type": "python",
      "request": "launch",
      "module": "uvicorn",
      "args": [
        "app.main:app",
        "--host", "0.0.0.0",
        "--port", "8000",
        "--reload"
      ],
      "jinja": true,
      "justMyCode": true
    },
    {
      "name": "pytest: Run All Tests",
      "type": "python",
      "request": "launch",
      "module": "pytest",
      "args": ["tests", "-v"],
      "justMyCode": true
    }
  ]
}
